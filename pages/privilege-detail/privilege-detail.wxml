<view class="container">
    <view class="privilege-title">{{discount.title}}</view>
    <view class="privilege-info">
        <view class="info-summary">{{discount.content.summary}}</view>
        <view  wx:for="{{discount.content.detail}}">
        <view class="info-detail">{{item}}</view>
        </view>
    </view>
    <view class="orders-info">
        <view class="orders-info-title">已发起的凑单活动</view>
        <view class="orders-info-item"  wx:for="{{discount.orders}}">
            <image class="order-item-img" src="{{item.img}}"></image>
            <view class="order-item-name">{{item.author}}</view>
            <view class="order-item-status">{{item.status}}</view>
            <view  wx:if="{{item.todo == '已完成'}}" class="order-item-look undo-look">{{item.todo}}</view>
            <view  wx:else class="order-item-look">{{item.todo}}</view>
        </view>
    </view>
    <view class="privilege-join">
        <view class="privilege-praise">{{discount.praise}}人</view>
        <view class="join" bindtap="makeOrder">立即发起</view>
    </view>
</view>