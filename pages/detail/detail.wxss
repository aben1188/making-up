/* pages/detail/detail.wxss */
.test {
    width: 600rpx;
    height: 300rpx;
}

.order-detail {
    padding: 20rpx;
}

.author-avatar {
  float: left;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;
}

.author-info {
  float: left;
  width: 200px;
  margin-left: 10px;
  margin-bottom: 10px;
  line-height: 120%;
}

.author {
    overflow: hidden;
}

.order-title {
    font-weight: bold;
    margin-bottom: 10rpx;
}

.order-content {
    height: 300rpx;
    border: solid 1px #999;
    border-radius: 5px;
    color: #666;
}

.order-description {
    margin: 30rpx 0;
    color: #666;
}

.piuctures-container {
    overflow: hidden;
}

.content-picture {
    float: left;
    width: 230rpx;
    height: 230rpx;
    margin-left: 5rpx;
}

.order-comment {
    margin: 25rpx 0 50rpx;
}

.order-comment:not(:last-child) {
    border-bottom: solid 1px #ccc;
}

.order-comment .comment-str {
    margin-left: 84rpx;
}

.tool-bar {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    padding: 20rpx;
    background-color: #f2f2f2;
    overflow: hidden;
}

.tool-bar .comment-input {
    box-sizing: border-box;
    float: left;
    height: 100rpx;
    width: 70%;
    border-radius: 5px;
    padding-left: 20rpx;
    line-height: 100%;
    border: solid 1px #999;
}

.tool-bar .comment-submit {
    float: left;
    height: 100rpx;
    font-size: 30rpx;
    line-height: 100rpx;
    width: 25%;
    margin-left: 5rpx;
    border-radius: 5px;
    border: solid 1px #4eaa4c;
}